<?xml version="1.0" encoding="UTF-8"?>
<GUI virtualw="1000" virtualh="1000" font="fonts/xirod.ttf" visible="false">
   <Label x="400" y="50" width="200" height="50" text="Loadout" readonly="true" xmargin="0" ymargin="0" align="center"/>
   
   <TabWidget x="100" y="110" width="500" height="700" text="">
      <Tab text="Map" buttonwidth="80"
           buttonnormal="textures/buttonnorm.png"
           buttonpressed="textures/buttonpressed.png"
           buttonhover="textures/buttonhover.png">
         <Label x="0" y="0" width="500" height="600" text="Map" readonly="true" xmargin="100" ymargin="100" align="center" name="map"
               normal="textures/buttonnormsquare.png">
         </Label>
      </Tab>
      <Tab text="Players" buttonwidth="120"
           buttonnormal="textures/buttonnorm.png"
           buttonpressed="textures/buttonpressed.png"
           buttonhover="textures/buttonhover.png">
      </Tab>
   </TabWidget>
   
   <ComboBox x="700"  y="100" width="200" height="40" name="Unit" selected="0"
             normal="textures/buttonnorm.png"
             valuechanged="updateunitselection">
      <ComboBoxItem>UnitTest</ComboBoxItem>
      <ComboBoxItem>Ultra</ComboBoxItem>
      <ComboBoxItem>Omega</ComboBoxItem>
   </ComboBox>
   <ComboBox x="700"  y="150" width="200" height="40" name="Left Arm" selected="0"
             normal="textures/buttonnorm.png"
             valuechanged="updateunitselection">
      <ComboBoxItem>None</ComboBoxItem>
      <ComboBoxItem>Machine Gun</ComboBoxItem>
      <ComboBoxItem>Laser</ComboBoxItem>
      <ComboBoxItem>Autocannon</ComboBoxItem>
      <ComboBoxItem>Gauss Rifle</ComboBoxItem>
      <ComboBoxItem>Neutrino Cannon</ComboBoxItem>
      <ComboBoxItem>Mortar</ComboBoxItem>
   </ComboBox>
   <ComboBox x="700"  y="200" width="200" height="40" name="Right Arm" selected="0"
             normal="textures/buttonnorm.png"
             valuechanged="updateunitselection">
      <ComboBoxItem>None</ComboBoxItem>
      <ComboBoxItem>Machine Gun</ComboBoxItem>
      <ComboBoxItem>Laser</ComboBoxItem>
      <ComboBoxItem>Autocannon</ComboBoxItem>
      <ComboBoxItem>Gauss Rifle</ComboBoxItem>
      <ComboBoxItem>Neutrino Cannon</ComboBoxItem>
      <ComboBoxItem>Mortar</ComboBoxItem>
   </ComboBox>
   <ComboBox x="700"  y="250" width="200" height="40" name="Torso" selected="0"
             normal="textures/buttonnorm.png"
             valuechanged="updateunitselection">
      <ComboBoxItem>None</ComboBoxItem>
      <ComboBoxItem>Machine Gun</ComboBoxItem>
      <ComboBoxItem>Laser</ComboBoxItem>
      <ComboBoxItem>Autocannon</ComboBoxItem>
      <ComboBoxItem>Gauss Rifle</ComboBoxItem>
      <ComboBoxItem>Neutrino Cannon</ComboBoxItem>
      <ComboBoxItem>Mortar</ComboBoxItem>
   </ComboBox>
   <ComboBox x="700"  y="300" width="200" height="40" name="Item" text="Item" selected="1"
             normal="textures/buttonnorm.png"
             valuechanged="updateunitselection">
      <ComboBoxItem>None</ComboBoxItem>
      <ComboBoxItem>Spawn Point</ComboBoxItem>
      <ComboBoxItem>Heat Sink</ComboBoxItem>
      <ComboBoxItem>Ammo Carrier</ComboBoxItem>
      <ComboBoxItem>Radar</ComboBoxItem>
   </ComboBox>
   <Label x="700" y="350" width="200" height="40" name="Weight" text="0 tons"
          normal="textures/buttonnorm.png"/>
   <Button x="700" y="900" width="200" height="50" name="Spawn" text="Spawn" align="center"
           normal="textures/buttonnorm.png"
           hover="textures/buttonhover.png"
           pressed="textures/buttonpressed.png"
           leftclick="spawn">
   </Button>
   <Button x="100" y="900" width="200" height="50" text="Main Menu" align="center"
           normal="textures/buttonnorm.png"
           hover="textures/buttonhover.png"
           pressed="textures/buttonpressed.png"
           leftclick="loadouttomain">
   </Button>
   
   <!-- Team display and selection -->
   <ComboBox x="700" y="550" width="150" height="40" name="TeamSelect" text="Select Team"
             normal="textures/buttonnorm.png"
             valuechanged="requestnewteam">
      <ComboBoxItem>Spectate</ComboBoxItem>
      <ComboBoxItem>Team 1</ComboBoxItem>
      <ComboBoxItem>Team 2</ComboBoxItem>
   </ComboBox>
   <Label x="700" y="600" width="150" height="20" name="TeamDisplay" text="Team"/>
   
   <!-- Spawn points -->
   <ComboBox x="700" y="800" width="200" height="40" name="SpawnPoints"
             normal="textures/buttonnorm.png"
             valuechanged="selectspawnpoint">
      <Normal>textures/buttonnorm.png</Normal>
      <ValueChangedAction>selectspawnpoint</ValueChangedAction>
   </ComboBox>
</GUI>